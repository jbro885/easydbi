{
  "compilerOptions": {
    "target": "es5",
    "declaration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "rootDir": ".",
    "outDir": ".",
    "lib": [
      "es6",
      "es2015.promise",
      "dom"
    ],
    "sourceMap": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
    }
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}

